namespace TP5A
{

    class TP5DB : DbContext
    {        
        public DbSet<Alumno> Alumnos{ get; set; }
        public DbSet<LasCarreras> LasCarreras { get; set; }
        public DbSet<Notas> Notas { get; set; }
    }

    internal class Program
    {   
        private static void Main(string[] args)
        {
            using (var ctx = new TP5DB())
            {

                var a1 = new Notas() { Nombre = "Marketing Moderno", Cuat = 1, Anio = 2018, Nota = 8, Fecha = "30 Marzo 2018", Tipo = "Primer Parcial" };
                var a2 = new Notas() { Nombre = "Historia del Cine", Cuat = 2, Anio = 2016, Nota = 6, Fecha = "18 Octubre 2016", Tipo = "Trabajo Practico" };
                var a3 = new Notas() { Nombre = "Anatomia", Cuat = 3, Anio = 2018, Nota = 10, Fecha = "18 Diciembre 2018", Tipo = "Final" };

                var a4 = new Carreras() { NombreCarrera = "Marketing" };
                var a5 = new Carreras() { NombreCarrera = "Historia" };
                var a6 = new Carreras() { NombreCarrera = "Veterinaria" };

                var a7 = new Alumno() { TP5DB = "Roberto Gomez", CarrerasId= 1 };
                var a8 = new Alumno() { TP5DB = "Florencio Varela", CarrerasId = 2 };
                var a9 = new Alumno() { TP5DB = "Marcelo Penazza", CarrerasId = 3 };

                ctx.Notas.Add(a1);
                ctx.Notas.Add(a2);
                ctx.Notas.Add(a3);
                ctx.SaveChanges();
                ctx.Carreras.Add(a4);
                ctx.Carreras.Add(a5);
                ctx.Carreras.Add(a6);
                ctx.SaveChanges();
                ctx.Alumnos.Add(a7);
                ctx.Alumnos.Add(a8);
                ctx.Alumnos.Add(a9);
                ctx.SaveChanges();

                var LosAlumnos = ctx.Alumnos.ToList();
                var Carreras = ctx.Carreras.ToList();
                var Notas = ctx.Notas.ToList();

                foreach (var als in LosAlumnos)
                {
                    String texto= als.Id + " - " + als.TP5DB +"\n";

                    foreach (var carreers in Carreras)
                    {
                        if (carreers.Id == als.Id)
                        {
                            String res2 = texto+ "Carrera: " + carreers.NombreCarrera +"\n";
                            foreach (var nota in Notas)
                            {
                                if (nota.Id == als.Id)
                                {
                                    String res3 = res2 + "Mat: " + nota.Nombre + "\nAÃ±o: " + nota.Anio + " - Cuat: " + nota.Cuat + "\nTipo examen: " + nota.Tipo + " - Fecha Examen: "+nota.Fecha + " - Nota: " + nota.Nota + "\n";
                                    Console.WriteLine(res3);
                                   
                                }
                            }
                        }
                        

                    }


                }
               Console.ReadKey();
            }            
        }
    }
    public class Alumno
    {
        public String TP5DB { get; set; }
        public int Id { get; set; }
        public int CarrerasId { get; set; }
        public Carreras Carreras { get; set; }
        public Notas Notas { get; set; }
}
    public class Carreras
    {
        public String NombreCarrera { get; set; }
        public int Id { get; set; }
    }

    public class TodasLasNotas
    {
        public String Nombre { get; set; }
        public int  Cuat { get; set; }
        public int Anio { get; set; }
        public int Nota { get; set; }
        public String Fecha { get; set; }
        public String Tipo { get; set; }
        public int Id { get; set; }

    }
}
